<section class="w-100 px-4 py-5" style="border-radius: .5rem .5rem 0 0;">
  <div class="row d-flex justify-content-center">
    <div class="col col-md-9 col-lg-7 col-xl-6">
      <div class="card" style="border-radius: 15px;">
        <div class="card-body p-4">
          <div class="d-flex">
            <div class="flex-shrink-0">
              <img src="<%= profile_image(@appointment.patient) %>"
                alt="Generic placeholder image" class="img-fluid" style="width: 180px; border-radius: 10px;">
            </div>
            <div class="flex-grow-1 ms-3">
              <h5 class="mb-1"><%= @appointment.patient.name.presence || "No Name" %></h5>
              <div class="d-flex justify-content-start rounded-3 p-2 mb-2 bg-body-tertiary">
                <div>
                  <p class="small text-muted mb-1">Email: <%= @appointment.patient.email %></p>
                  <p class="small text-muted mb-1">Phone: <%= @appointment.patient.phone %></p>
                  <p class="small text-muted mb-1">Doctor Name: <%= @appointment.doctor.name %></p>
                  <p class="small text-muted mb-1">Date: <%= @appointment.date&.to_date %></p>
                  <p class="small text-muted mb-1">Slot: <%= "#{@appointment.slot_time}" %></p>
                </div>
              </div>
              <div class="d-flex pt-1">
               <%# <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary me-1 flex-grow-1">Chat</button> %>
               <%= appointment_status(@appointment) %>
                <%# <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary flex-grow-1">Follow</button> %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
