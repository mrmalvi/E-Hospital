<%= simple_form_for(@patient, local: true, html: { multipart: true }, url: (@patient.persisted? ? doctors_appointment_path(@patient) : doctors_appointments_path)) do |form| %>

  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, autofocus: true, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_area :phone, class: "form-control", placeholder: "Phone" %>
  </div>

  <div class="form-group">
    <%= select_tag(:doctor_id, options_from_collection_for_select(current_hospital.doctors.doctor, :id, :name, params[:doctor_id]), class: "form-control", prompt: "Select Doctor") %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_area :email, class: "form-control", placeholder: "email" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
